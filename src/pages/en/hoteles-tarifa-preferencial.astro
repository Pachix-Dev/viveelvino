---
import i18next, { changeLanguage, t } from "i18next";
import Layout from "../../layouts/Layout.astro";
import { hotels, Start } from "../../constans_hoteles.js";

changeLanguage("en");
---

<Layout
  title='Vive el Vino 2024'
  description='Descubre una oportunidad única para destacar tu producto en la segunda región de consumo más relevante del país. Sumérgete en las últimas tendencias del sector participando en nuestro programa de conferencias y talleres. Amplía tu red de negocios mediante encuentros B2B y B2C exclusivos. Aprovecha la oportunidad de promover tu marca a través de la difusión y cobertura mediática del evento. ¡Potencia tu presencia y conecta con oportunidades sin igual!'
>
  <section class='container mx-auto px-4 my-10'>
    <h1 class='font-bold text-4xl'>{t('hotels.title')}</h1>
    <p class='mt-5' set:html={t('hotels.description')} />
    <div class='mt-10 grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6'>
      {
        hotels.map((hotel) => {
          return (
            <div class='border rounded-xl shadow-xl '>
              <img
                src={hotel.src}
                alt={hotel.name}
                class='w-full h-64 object-cover rounded-t-xl'
              />
              <div class='p-4'>
                <p class='font-bold text-gray-600'>{hotel.name}</p>
                <p class='flex mt-3' set:html={Start(hotel.start)} />
                <p class='mt-5'>{hotel.address}</p>
                <p class='flex mt-5'>
                  <svg
                    xmlns='http://www.w3.org/2000/svg'
                    fill='none'
                    viewBox='0 0 24 24'
                    stroke-width={1.5}
                    stroke='currentColor'
                    width={20}
                  >
                    <path
                      stroke-linecap='round'
                      stroke-linejoin='round'
                      d='M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3'
                    />
                  </svg>{' '}
                  {hotel.phone_mexico}
                  <br />
                </p>
                {hotel.phone_international === '' ? (
                  ''
                ) : (
                  <p class='flex mt-5'>
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      fill='none'
                      viewBox='0 0 24 24'
                      stroke-width={1.5}
                      stroke='currentColor'
                      width={20}
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        d='M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3'
                      />
                    </svg>
                    {hotel?.phone_international}
                  </p>
                )}
                {hotel.celular === '' ? (
                  ''
                ) : (
                  <p class='flex mt-5'>
                    <svg
                      xmlns='http://www.w3.org/2000/svg'
                      fill='none'
                      viewBox='0 0 24 24'
                      stroke-width={1.5}
                      stroke='currentColor'
                      width={20}
                    >
                      <path
                        stroke-linecap='round'
                        stroke-linejoin='round'
                        d='M10.5 1.5H8.25A2.25 2.25 0 006 3.75v16.5a2.25 2.25 0 002.25 2.25h7.5A2.25 2.25 0 0018 20.25V3.75a2.25 2.25 0 00-2.25-2.25H13.5m-3 0V3h3V1.5m-3 0h3m-3 18.75h3'
                      />
                    </svg>
                    {hotel?.celular}
                  </p>
                )}
                <p class='mt-5 border-y-2 py-2'>
                  {i18next.language === 'en' ? hotel.rate_en : hotel.rate_es}
                </p>
                <p class='border-b-2 py-2'>
                  <a
                    href={`mailto:${hotel.email}`}
                    class='text-blue-600 hover:text-[#DB00AE]'
                  >
                    {hotel.email}
                  </a>
                  <br />
                  <a
                    href={`mailto:${hotel.cc}`}
                    class='text-blue-600 hover:text-[#DB00AE]'
                  >
                    {hotel?.cc}
                  </a>
                </p>
                <p class='flex mt-5'>
                  <img src='/hoteles/walk_icon.webp' width={20} />{' '}
                  {hotel.time_walk}
                </p>
              </div>
            </div>
          )
        })
      }
    </div>
  </section>
</Layout>
