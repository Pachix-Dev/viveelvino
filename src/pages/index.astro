---
import i18next, { changeLanguage, t } from "i18next";
import Layout from "../layouts/Layout.astro";
import { strategic_allies, media_partners } from "../contans_logos.js";
import { MarqueeLogos } from "../components/MarqueeLogos.jsx";

changeLanguage("es");
---

<Layout
  title='Vive el Vino 2024'
  description='Descubre una oportunidad única para destacar tu producto en la segunda región de consumo más relevante del país. Sumérgete en las últimas tendencias del sector participando en nuestro programa de conferencias y talleres. Amplía tu red de negocios mediante encuentros B2B y B2C exclusivos. Aprovecha la oportunidad de promover tu marca a través de la difusión y cobertura mediática del evento. ¡Potencia tu presencia y conecta con oportunidades sin igual!'
>
  <main>
    <section class='relative h-screen'>
      <video
        class='absolute w-screen h-screen object-cover z-[-1]'
        muted
        loop
        autoplay
        playsinline
      >
        <source src='/viveelvino.mp4' type='video/mp4' />
      </video>
      <div
        data-aos='fade-up'
        data-aos-duration='1000'
        class='container mx-auto px-4 h-full grid place-items-center content-center'
      >
        <p
          class='text-white font-bold text-4xl text-center'
          style='text-shadow: 4px 4px 4px black'
        >
          {t('home.presale')}
        </p>
        <a
          href='/tickets'
          class='mt-10 bg-gray-800 hover:bg-slate-600 text-white text-xl rounded-lg p-3'
          >{t('home.presale_button')}</a
        >
      </div>
    </section>
    <section class='container mx-auto p-4'>
      <p
        data-aos='fade-up'
        data-aos-duration='500'
        class='mt-10 font-bold text-4xl text-center text-[#082F5B]'
      >
        {t('home.main_points')}
      </p>
      <img
        class='w-full mt-10'
        data-aos='fade-up'
        data-aos-duration='1000'
        src={i18next.language === 'es'
          ? '/img/ejes_es.webp'
          : '/img/ejes_en.webp'}
      />
      <video
        src='/ResultadosViveElVino2023Cortinilla.mp4'
        class='my-20 w-full'
        controls></video>
      <p
        data-aos='fade-up'
        data-aos-duration='1000'
        class='mt-10 font-bold text-4xl text-[#082F5B]'
      >
        {t('home.why_participate')}
      </p>
      <div class='mt-5 grid sm:grid-cols-2 gap-20'>
        <div
          data-aos='fade-right'
          data-aos-duration='1000'
          class='flex items-center gap-3'
        >
          <img src='/img/iconwhy-participe1.webp' width='100' />
          <p class='text-[#082F5B] text-xl font-semibold'>
            {t('home.why_participate_1')}
          </p>
        </div>
        <div
          data-aos='fade-left'
          data-aos-duration='1000'
          class='flex items-center gap-3'
        >
          <img src='/img/iconwhy-participe2.webp' width='100' />
          <p class='text-[#082F5B] text-xl font-semibold'>
            {t('home.why_participate_2')}
          </p>
        </div>
        <div
          data-aos='fade-right'
          data-aos-duration='1000'
          class='flex items-center gap-3'
        >
          <img src='/img/iconwhy-participe3.webp' width='100' />
          <p class='text-[#082F5B] text-xl font-semibold'>
            {t('home.why_participate_3')}
          </p>
        </div>
        <div
          data-aos='fade-left'
          data-aos-duration='1000'
          class='flex items-center gap-3'
        >
          <img src='/img/iconwhy-participe4.webp' width='100' />
          <p class='text-[#082F5B] text-xl font-semibold'>
            {t('home.why_participate_4')}
          </p>
        </div>
      </div>
    </section>
    <section class='mt-20 container mx-auto px-4 grid place-items-center'>
      <p class='text-4xl font-bold text-[#082F5B]'>
        {t('home.sponsor')}
      </p>
      <img src='/img/Enowine.webp' class='w-full sm:w-52 mt-10' />
      <p class='mt-10 text-4xl font-bold text-[#082F5B]'>
        {t('home.strategic_allies')}
      </p>
      <MarqueeLogos images={strategic_allies} direction='left' client:only />
      <p class='mt-10 text-4xl font-bold text-[#082F5B]'>Media Partners</p>
      <MarqueeLogos images={media_partners} direction='right' client:only />
    </section>
  </main>
</Layout>
